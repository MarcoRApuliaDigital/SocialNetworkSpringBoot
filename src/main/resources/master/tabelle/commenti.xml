<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="202601141400" author="s.lagatta">

        <createTable tableName="commenti">

            <column name="id_commento" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="post_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="utente_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="testo" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="data_pubblicazione" type="timestamp">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="commenti"
                baseColumnNames="post_id"
                referencedTableName="post"
                referencedColumnNames="id_post"
                constraintName="fk_commenti_post"/>

        <addForeignKeyConstraint
                baseTableName="commenti"
                baseColumnNames="utente_id"
                referencedTableName="utenti"
                referencedColumnNames="id_utente"
                constraintName="fk_commenti_utenti"/>

    </changeSet>

</databaseChangeLog>
