<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="202601141340" author="s.lagatta">

        <createTable tableName="post">

            <column name="id_post" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="utente_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="data_pubblicazione" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="numero_like" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="numero_condivisioni" type="int">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="post"
                baseColumnNames="utente_id"
                referencedTableName="utenti"
                referencedColumnNames="id_utente"
                constraintName="fk_post_utenti"/>

    </changeSet>

</databaseChangeLog>
