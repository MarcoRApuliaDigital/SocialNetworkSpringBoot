<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="202601141350" author="s.lagatta">

        <createTable tableName="contenuti_post">

            <column name="id_contenuto" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="post_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="tipo_contenuto" type="varchar">
                <constraints nullable="true"/>
            </column>

            <column name="contenuto" type="blob">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="contenuti_post"
                baseColumnNames="post_id"
                referencedTableName="post"
                referencedColumnNames="id_post"
                constraintName="fk_contenuti_post_post"/>

    </changeSet>

</databaseChangeLog>
