<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="202601141411" author="s.lagatta">

        <createTable tableName="follow">

            <column name="id_follow" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="follower_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="seguendo_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="data_creazione" type="timestamp">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="follow"
                baseColumnNames="follower_id"
                referencedTableName="utenti"
                referencedColumnNames="id_utente"
                constraintName="fk_follow_follower"/>

        <addForeignKeyConstraint
                baseTableName="follow"
                baseColumnNames="seguendo_id"
                referencedTableName="utenti"
                referencedColumnNames="id_utente"
                constraintName="fk_follow_seguendo"/>

        <!-- evitare duplicati follow -->
        <addUniqueConstraint
                tableName="follow"
                columnNames="follower_id,seguendo_id"
                constraintName="uc_follow_unico"/>

    </changeSet>

</databaseChangeLog>

